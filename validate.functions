heroku_validate_region()
{
	local code=$1
	local category="$2"
	local name="$3"
	local value="$4"
		
	case "$value" in
		
		eu|us)
			:
		;;
		
		*)
			core_validate_exit "The $category '$name' specifies a region '$value' which is not one of 'eu' or 'us'"
		;;
		
	esac
}